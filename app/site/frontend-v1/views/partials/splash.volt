{# Simple Splash Loader #}
<div class="splash">
    <div class="color-line"></div>
    <div class="splash-title">
        <h1>{{ t.gettext('Loading...') }}</h1>
        <p>{{ t.gettext('Please whaiting while loading') }}</p>
        <div class="spinner">
            <div class="rect1"></div>
            <div class="rect2"></div>
            <div class="rect3"></div>
            <div class="rect4"></div>
            <div class="rect5"></div>
        </div>
    </div>
</div>